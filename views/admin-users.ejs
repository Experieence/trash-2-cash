<!DOCTYPE html>
<html>
<head>
  <title>Manage Users</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
<nav class="navbar">
  <div class="nav-left">
    <div class="logo">Trash2Cash Admin</div>

    <button class="menu-toggle" onclick="toggleMenu()">☰</button>

    <div class="nav-links" id="navMenu">
      <a href="/admin-dashboard">Dashboard</a>
      <a href="/admin-users">Manage Users</a>
      <a href="/admin-rewards">Approve Rewards</a>
    </div>
  </div>

  <div class="nav-right">
    <div class="dropdown">
      <span class="dropbtn">Hello, admin ⌄</span>
      <div class="dropdown-content">
        <a href="/admin-dashboard">Dashboard</a>
        <a href="/admin-users">Manage Users</a>
        <a href="/admin-rewards">Approve Rewards</a>
        <a href="/logout">Logout</a>
      </div>
    </div>
  </div>
</nav>

<script>
  function toggleMenu() {
    const nav = document.getElementById('navMenu');
    nav.classList.toggle('show');
  }
</script>

  <div class="container">
    <h2>All Registered Users</h2>
    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Points</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email || 'N/A' %></td>
            <td><%= user.points || 0 %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
